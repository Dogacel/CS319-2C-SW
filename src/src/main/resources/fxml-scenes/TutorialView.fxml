            <Label fx:id="tutorialTextLabel" contentDisplay="CENTER" layoutX="130.0" layoutY="300.0" nodeOrientation="RIGHT_TO_LEFT" text="TUTORIAL TEXT WILL BE HERE" textFill="WHITE">
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
            <ImageView fx:id="tutorialImage" fitHeight="183.0" fitWidth="600.0" layoutX="3.0" layoutY="417.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </Pane>
   </children>
