<GridPane fx:id="tutorialGrid" style="-fx-background-color: rgba(0,0,0,0.4);" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SevenWonders.UserInterface.TutorialController">
   <children>
      <Pane prefHeight="600.0" prefWidth="600.0">
         <children>
            <Button id="closeButton" fx:id="closeButton" alignment="TOP_RIGHT" contentDisplay="RIGHT" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#closeButtonClicked" prefHeight="40.0" prefWidth="40.0" stylesheets="@../css/TutorialView.css" />
